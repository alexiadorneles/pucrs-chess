{
  "compilerOptions": {
    "baseUrl": "./src",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noEmit": false,
    "noEmitOnError": false,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "target": "ES5",
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./dist",
    "rootDir": "./src/",
    "sourceMap": false,
    "lib": [
      "es6",
      "dom",
      "es2017",
      "es7"
    ],
    "resolveJsonModule": true
  }
}
